%section.admin_add_category
  .container
    .row
      .col-md-10.col-md-offset-1
        = render 'shared/errors_message', object: @category
        
        = form_for @category do |f|
          %fieldset.form-group
            .col-sm-6
              = f.label :name, class: "label.control-label"
              = f.text_field :name, class: "input.form-control"

          %fieldset.actions.form-group
            .col-sm-6
              = f.submit "Add Category", class: "input btn btn-success"